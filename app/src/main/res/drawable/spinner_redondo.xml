<?xml version="1.0"
    encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle">

                    <stroke
                        android:width="2dp"
                        android:color="@color/fondo_edittext"/>

                    <padding
                        android:right="10dp"
                        android:left="12dp"/>

                    <corners
                        android:radius="10dp"/>

                </shape>
            </item>
            <item>
                <bitmap
                    android:src="@drawable/ic_down_arrow_grande"
                    android:gravity="center_vertical|right"/>
            </item>
        </layer-list>
    </item>
</selector>