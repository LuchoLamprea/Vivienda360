                android:id="@+id/constraintLayoutContenedorFotos"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_height="250dp"
                android:background="@drawable/borde_sin_relleno"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearLayoutContenedorBotonesFotos">

                <ImageView
                    android:id="@+id/imageViewSinFotos"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:tint="@color/texto_hint_default"
                    android:src="@drawable/ic_image_not_supported_24"
                    android:contentDescription="@string/content_description" />

                <ImageSwitcher
                    android:id="@+id/imageSwitcherFotos"
                    android:layout_width="0dp"
                    android:foregroundGravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_height="0dp"/>

                <ImageView
                    android:id="@+id/imageViewFotoAnterior"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_back_24"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:tint="@color/white" />

                <ImageView
                    android:id="@+id/imageViewFotoSiguiente"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_next_24"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:tint="@color/white" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textViewAgregaModelo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/kumbh_sans_semibold"
                android:gravity="center"
                android:text="@string/agrega_modelo_3d"
                android:textColor="@color/texto_hint_default"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/constraintLayoutContenedorFotos" />

            <LinearLayout
                android:id="@+id/linearLayoutContenedorBotonesModelo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/borde_redondeado_20"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewAgregaModelo">

                <android.widget.Button
                    android:id="@+id/buttonSeleccionarModelo"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:background="@drawable/boton_activo_redondo"
                    android:fontFamily="@font/kumbh_sans_semibold"
                    android:padding="0dp"
                    android:text="@string/seleccionar_modelo"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <android.widget.Button
                    android:id="@+id/buttonLimpiarModelo"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:background="@drawable/boton_inactivo_redondo"
                    android:fontFamily="@font/kumbh_sans_semibold"
                    android:padding="0dp"
                    android:text="@string/boton_limpiar_seleccion"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:id="@+id/constraintLayoutContenedorModelo"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_height="250dp"
                android:background="@drawable/borde_sin_relleno"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearLayoutContenedorBotonesModelo">

                <ImageView
                    android:id="@+id/imageViewSinModelo"
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_image_not_supported_24"
                    app:tint="@color/texto_hint_default"
                    android:contentDescription="@string/content_description" />

                <ImageSwitcher
                    android:id="@+id/imageSwitcherModelo"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="0dp"
